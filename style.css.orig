.btn-with-bg {
  display: inline-block;
  background-color: hsl(0, 0%, 100%);
  color: hsl(356, 100%, 66%);
  border-radius: 50px;
  font-size: 14px;
  font-weight: 600;
  border: none;
  padding: 16px 32px;
}

.btn-very-light-red-hover:hover {
  background-color: hsl(355, 100%, 74%);
  color: hsl(0, 0%, 100%);
}

.btn-very-light-red-hover-reverse:hover {
  background-color: hsl(0, 0%, 100%);
  color: hsl(355, 100%, 74%);
}

/* .btn-with-bg:hover {
  background-color: hsl(355, 100%, 74%);
  color: hsl(0, 0%, 100%);
} */

.btn-without-bg {
  display: inline-block;
  background-color: transparent;
  color: hsl(0, 0%, 100%);
  border: 1px solid hsl(0, 0%, 100%);
  border-radius: 50px;
  font-size: 14px;
  font-weight: 600;
  padding: 16px 32px;
}

.btn-login {
  display: inline-block;
  background-color: transparent;
  color: hsl(0, 0%, 100%);
  border: none;
  border-radius: 50px;
  font-size: 14px;
  font-weight: 600;
  padding: 16px 20px;
}

.btn-with-bg + .btn-without-bg, 
.btn-login + .btn-with-bg {
  margin-left: 16px;
}


